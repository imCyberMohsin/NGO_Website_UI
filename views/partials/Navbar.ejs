        <!-- Left -->
        <div class="w-full flex flex-wrap items-center justify-between mx-auto">
            <a href="/" class="flex items-center ">
                <img src="../images/logo-black.png" class="sm:h-14 h-12" alt="Logo" />
                <!-- <span class="self-center text-2xl font-semibold whitespace-nowrap text-white">Mother's Association</span> -->
            </a>

            <!-- Hidden Button For Mobile -->
            <button id="mobile-menu-toggle" type="button"
                class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-black rounded-lg md:hidden hover:bg-red-400 transition-all duration-200 focus:ring-2 ring-black"
                aria-controls="navbar-default" aria-expanded="false">
                <span class="sr-only">Open main menu</span>
                <i class="fa-solid fa-bars text-3xl"></i>
            </button>

            <!-- Right -->
            <div class="hidden w-full md:block md:w-auto" id="navbar-default">
                <ul
                    class="flex flex-col justify-center items-center p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 bg-transparent">
                    <li class="py-3">
                        <a class="text-xl font-semibold hover:text-red-400 transition-all duration-150" href="">Home</a>
